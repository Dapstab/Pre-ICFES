mixin navItem(link, text, icon, active)
    li.sidebar__menu-item
        a.sidebar__menu-link(class=`${active ? 'active' : ''}` href=`${link}`)
            //- span.las.la-igloo
            i(class=`fas fa-${icon}`)
            span #{text}

