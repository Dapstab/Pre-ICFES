extends ../utils/metadata 

mixin getOptions(opt)
    .option
        input.answers(value=opt type='radio' name='option' id=`checkbox-${opt}` for=`option-${opt}`)
        textarea.options(name=`option-${opt}`, id=`option-${opt}`, placeholder="Escribe tu respuesta aquí.")
        i.fas.fa-image


block content
    form#form__question
        fieldset.data
            label.label-subject(for='subject') Asignatura
            select#subject.form__select(name="category")
                each field in asignaturas
                    option(value=`${field}`)=field
                
            label.label-topics(for='topics' list='topics') Temas
            select#topics
            ul.topics

            label.label-subtopics(for='subtopics' list='subtopics') Subtemas
            select#subtopics
            ul.subtopics

            label.label-difficulty(for='difficulty') Dificultad 
            select#difficulty
                each difficulty in [1,2,3,4,5]
                    option(value=difficulty)=difficulty
        fieldset.question
            
            label(type='text' for="question") Pregunta
            textarea#question( name="question" placeholder="Escribe tu pregunta aquí.")
            each letter in [0,1,2,3]
                +getOptions(letter)
            button.btn.btn-small Terminar