extends ../utils/metadata

block content
    section.section__quiz.main-grid
        form#form__quiz 
            h2.title__session Crear Quiz
            .form__group    
                label(for='name') Nombre
                input#name(type='text' name='name' min=3 max=20)
            .form__group
                label(for='subject') Asignatura 
                select#subject.form__select(name='subject')
                    option(value="" disabled selected hidden) Selecciona una asignatura
                    each option in asignaturas
                        option(value=`${option}`)=option

            .form__group
                label(for='time') Tiempo
                select#time.form__select(name='time')
                    each time in [0.1, 15, 30, 45, 60, 90, 120]
                        option.select__option-time(value= `${time}`)= `${time}`
            
            .form__group
                label(for='due-date') Fecha de Entrega
                input#due-date(type='date')

            .form__group
                label(for='description') Descripci√≥n
                br
                textarea#description(type='text')
                
            button.btn.btn-small.btn__createQuiz(type="submit") Crear Quiz
        
    script(src='/js/bundle/bundle.js')