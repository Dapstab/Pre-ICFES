extends ../dashboard

mixin questionItem(question, name)
    .question-container
        span.number=`${name+1})`
        p.question= question.pregunta
    ul.optionsContainer(data-indexQ=`${name}`)
        each option, i in question.opciones 
            li.option-list-item
                input.option-input(type="radio", name=`${name}` data-indexO=`${i}`)
                label.question-label(for=`option-${i}`)
                    p.question-answer=option
                
                

block append head
    <script type="text/javascript" async src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.7/MathJax.js?config=TeX-MML-AM_CHTML"></script>
    <script type="text/x-mathjax-config">MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});</script>

block contentDashboard
    .timer(data-time=quiz.tiempo)
    h2= quiz.nombre
    p= quiz.descripcion
    form.questions
        each question, i in quiz.preguntas
            
            +questionItem(question, i)
        button.solveQuizBtn Finalizar Quiz